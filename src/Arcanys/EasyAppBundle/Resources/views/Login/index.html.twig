<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>Login | EasyApp</title>

    <style class="cssdeck">@import url(http://fonts.googleapis.com/css?family=Bree+Serif);</style>
    <link href="{{ asset('bundles/arcanyseasyapp/css/login.css') }}" type="text/css" rel="stylesheet" />
</head>
<body>

<div id="wrapper">

    {#{% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}#}
    <form name="login-form" class="login-form" action="{{ path('login_check') }}" method="post">

        <div class="header">
            <h1>Easy AP</h1>
            <span>Login Form</span>
        </div>

        <div class="content">
            <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
            <input type="text" id="username" name="_username" value="" required="required" class="input username" placeholder="Username">
            <div class="user-icon"></div>

            <input type="password" id="password" name="_password" class="input password" placeholder="Password">
            <div class="pass-icon"></div>
        </div>

        <div class="footer">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">Remember Me</label>
            <input type="submit" name="_submit" value="Login" class="button" />
        </div>

    </form>

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>

</div>
<div class="gradient"></div>

</body>
</html>